@page "/accounting_units"

@inject ApiService ApiService
@inject NavigationManager Navigation
@inject PaginationService<Abrechnungseinheit> PaginationService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ToastService ToastService
@inject ModalService ModalService

@attribute [Authorize]

<PageTitle>Abrechnungseinheiten | ACC Web UI</PageTitle>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <h1>Abrechnungseinheiten</h1>
    <Button Type="ButtonType.Button" Color="ButtonColor.Primary"><Icon Name="IconName.Plus" /> Neue Abrechnungseinheit</Button>
</div>

<div class="table-responsive card shadow-sm border mb-3">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Abkürzung</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (IsLoading)
            {
                <tr>
                    <td>
                        <div class="spinner-border spinner-border-sm" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </td>
                    <td>
                        <div class="spinner-border spinner-border-sm" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </td>
                    <td>
                        <div class="spinner-border spinner-border-sm" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </td>
                    <td>
                    </td>
                </tr>
            }
            else
            {
                if (PaginationService.TotalItems == 0)
                {
                    <tr>
                        <td colspan="6">
                            <Icon Color="IconColor.Danger" Name="IconName.ExclamationTriangleFill" />
                            Keine Abrechnungseinheiten gefunden
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (Abrechnungseinheit accounting_unit in AccountingUnits)
                    {
                        <tr>
                            <td>
                                @accounting_unit.AbrechnungseinheitID
                            </td>
                            <td>
                                @accounting_unit.Name
                            </td>
                            <td>
                                @accounting_unit.Abkuerzung
                            </td>
                            <td>
                                <Tooltip Class="d-inline-block" Title="Edit" role="button">
                                    <Button Type="ButtonType.Link" @onclick="() => Edit(accounting_unit.AbrechnungseinheitID)" Color="ButtonColor.Primary"><Icon Name="IconName.PencilSquare" /></Button>
                                </Tooltip>
                                <Tooltip Class="d-inline-block" Title="Delete" role="button">
                                    <Button Type="ButtonType.Link" @onclick="() => Delete(accounting_unit.AbrechnungseinheitID)" Color="ButtonColor.Danger"><Icon Name="IconName.Trash" /></Button>
                                </Tooltip>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>

@if (AccountingUnits != null && PaginationService.TotalItems > 0)
{
    <div class="btn-group" role="group" aria-label="Pagination">
        <Button Type="ButtonType.Link" Size="Size.Small" Color="ButtonColor.Secondary" @onclick="GoToFirstPage" Disabled="PaginationService.CurrentPage == 1"><Icon Name="IconName.SkipBackward" /></Button>
        <Button Type="ButtonType.Link" Size="Size.Small" Color="ButtonColor.Secondary" @onclick="GoToPreviousPage" Disabled="PaginationService.CurrentPage == 1"><Icon Name="IconName.CaretLeft" /></Button>
        <Button Type="ButtonType.Link" Size="Size.Small" Color="ButtonColor.Secondary"><b>@PaginationService.CurrentPage</b></Button>
        <Button Type="ButtonType.Link" Size="Size.Small" Color="ButtonColor.Secondary" @onclick="GoToNextPage" Disabled="!PaginationService.HasNextPage"><Icon Name="IconName.CaretRight" /></Button>
        <Button Type="ButtonType.Link" Size="Size.Small" Color="ButtonColor.Secondary" @onclick="GoToLastPage" Disabled="PaginationService.CurrentPage == PaginationService.TotalPages"><Icon Name="IconName.SkipForward" /></Button>
    </div>
    <span>
        @($"{(PaginationService.CurrentPage - 1) * PaginationService.PageSize + 1} - {Math.Min(PaginationService.CurrentPage * PaginationService.PageSize, PaginationService.TotalItems)} von {PaginationService.TotalItems} Ergebnisse(n) auf insgesamt {PaginationService.TotalPages} Seite(n)")
    </span>
}

@code {
    // Initialize method
    private bool IsLoading = true;

    private ClaimsPrincipal AuthenticatedUser;

    protected override async Task OnInitializedAsync()
    {
        AuthenticationState authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        AuthenticatedUser = authState.User;

        await GetData();
    }

    // Entity actions
    protected void Create() => Navigation.NavigateTo("accounting_units/create");
    protected void Edit(int AbrechnungseinheitID) => Navigation.NavigateTo($"accounting_units/{AbrechnungseinheitID}/edit");

    protected async Task Delete(int AbrechnungseinheitID)
    {
        await ApiService.DeleteAsync<Abrechnungseinheit>(AbrechnungseinheitID);

        ToastService.Notify(
            new ToastMessage()
                {
                    Type = ToastType.Success,
                    IconName = IconName.FileEarmarkText,
                    Title = "Abrechnungseinheit",
                    HelpText = DateTime.Now.ToString(),
                    Message = "Abrechnungseinheit erfolgreich gelöscht",
                }
        );

        await GetData();
    }

    // Entity
    public IEnumerable<Abrechnungseinheit> AccountingUnits;

    private async Task GetData()
    {
        IsLoading = true;

        ApiService.InitializeEndpoint(ResourceEndpoint.accounting_units);
        PaginationService.InitializePagination();

        AccountingUnits = await PaginationService.LoadPaginatetedData();
        IsLoading = false;
    }

    // Entity pagination
    private async Task GoToFirstPage()
    {
        AccountingUnits = await PaginationService.GoToPage(1);
    }

    private async Task GoToNextPage()
    {
        AccountingUnits = await PaginationService.GoToPage(PaginationService.CurrentPage + 1);
    }

    private async Task GoToPreviousPage()
    {
        AccountingUnits = await PaginationService.GoToPage(PaginationService.CurrentPage - 1);
    }

    private async Task GoToLastPage()
    {
        AccountingUnits = await PaginationService.GoToPage(PaginationService.TotalPages);
    }
}
