<Window x:Class="DoePaAdminApp.Views.ManageAuftraegeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoePaAdminApp.Views"
        mc:Ignorable="d"
        Title="ManageAuftraegeWindow" Height="450" Width="800"
        DataContext="{Binding Source={StaticResource Locator}, Path=ManageAuftraegeViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />            
        </Grid.RowDefinitions>

        <!--Kunde links vollständing-->
        <ListView 
                  Name="lvKunde"
                  Grid.Column="0"
                  Grid.Row="0"
                  Grid.RowSpan="2"
                  ItemsSource="{Binding Kunden}"
                  SelectedItem="{Binding SelectedKunde}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=KundeID}" Header="Nr"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Kundenname}" Header="Kundenname" />
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Button Command="{Binding AddMitarbeiterCommand}">
                <Control Template="{StaticResource tmpAddItemButton}" />
            </Button>
            <Button Command="{Binding RemoveMitarbeiterCommand}">
                <Control Template="{StaticResource tmpRemoveItemButton}" />
            </Button>
        </StackPanel>

        <!--Aufträge oben rechts--> 
        <DataGrid
            Grid.Column="2"
            Grid.Row="0"
            ItemsSource="{Binding Path=SelectedKunde.Auftraege}"
            SelectedItem="{Binding SelectedAuftrag}"
            AutoGenerateColumns="False">
            <DataGrid.Columns>
                <!--SelectedKunde.Auftrage > Auftraggeber /-name-->
                <DataGridTextColumn Header="Kunde" Binding="{Binding Path=Kunde.Kundenname}" />
                <DataGridTextColumn Header="Auftragsname" Binding="{Binding Path=Auftragsname}" />
            </DataGrid.Columns>
        </DataGrid>

        <!--Aufträge unten rechts-->
        <DataGrid
            Grid.Column="2"
            Grid.Row="1"
            ItemsSource="{Binding Path=SelectedAuftrag.Auftragspositionen}"
            AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="AuftragspositionNr." Binding="{Binding Path=AuftragspositionNummer}" />
                <DataGridTextColumn Header="Positionsbezeichnung" Binding="{Binding Path=Positionsbezeichnung}" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel
            Grid.Column="2"
            Grid.Row="3">
            <Button Command="{Binding SaveChangesCommand}">
                <Control Template="{StaticResource tmpSaveDbDataButton}" />
            </Button>
        </StackPanel>



    </Grid>
</Window>
