<Window x:Class="DoePaAdminApp.Views.ManageGeschaeftsjahreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoePaAdminApp.Views"
        mc:Ignorable="d"
        xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
        xmlns:dpAdminControls="clr-namespace:DoePaAdminApp.Controls"
        Title="{StaticResource strEditFiscalYears}"
        Icon="{svg:SvgImage /Resources/undraw_schedule_re_2vro.svg}"
        DataContext="{Binding Source={StaticResource Locator}, Path=ManageGeschaeftsjahreViewModel}" d:DesignHeight="180.203" d:DesignWidth="292.073">
    <Grid>

        <DataGrid ItemsSource="{Binding Geschaeftsjahre, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Geschäftsjahr" Binding="{Binding Path=Name}" />
                <DataGridTemplateColumn Header="Von">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=DatumVon, StringFormat=dd.MM.yyyy}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding Path=DatumVon}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Bis">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=DatumBis, StringFormat=dd.MM.yyyy}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding Path=DatumBis}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Rechnungsprefix" Binding="{Binding Path=Rechnungsprefix}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
