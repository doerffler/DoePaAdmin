                                            </DrawingGroup>
                                        </DrawingBrush.Drawing>
                                    </DrawingBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Viewbox>
                        <Label Content="{StaticResource strRemoveItem}" />
                    </StackPanel>
            </ControlTemplate>

        </ResourceDictionary>
        
    </Application.Resources>
</Application>
